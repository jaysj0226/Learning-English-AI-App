<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 음성 인식 권한 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 인터넷 권한 (API 호출용) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 네트워크 상태 확인 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JustSpeakApp"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- 스플래시 액티비티 (시작 화면) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.JustSpeakApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 로그인 액티비티 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 회원가입 액티비티 -->
        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 관심사 선택 액티비티 -->
        <activity
            android:name=".InterestSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 학습 목표 액티비티 -->
        <activity
            android:name=".LearningGoalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 레벨 테스트 액티비티 -->
        <activity
            android:name=".LevelTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 레벨 테스트 퀴즈 액티비티 -->
        <activity
            android:name=".LevelTestQuizActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 레벨 테스트 대화 액티비티 -->
        <activity
            android:name=".LevelTestConversationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 레벨 테스트 결과 액티비티 -->
        <activity
            android:name=".LevelTestResultActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 메인 액티비티 -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 대화 연습 액티비티 (AI 버전) -->
        <activity
            android:name=".ConversationActivityWithAI"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 대화 연습 액티비티 (기본) -->
        <activity
            android:name=".ConversationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- 설정 액티비티 -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 계정 설정 액티비티 -->
        <activity
            android:name=".AccountSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 프로필 설정 액티비티 -->
        <activity
            android:name=".ProfileSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 네트워크 테스트 액티비티 -->
        <activity
            android:name=".NetworkTestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 진도 액티비티 -->
        <activity
            android:name=".ProgressActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 일정 액티비티 -->
        <activity
            android:name=".ScheduleActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 시나리오 목록 액티비티 -->
        <activity
            android:name=".ScenariosActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 음성 설정 액티비티 -->
        <activity
            android:name=".VoiceSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>