<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레벨 테스트 완료!"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginBottom="24dp" />

        <!-- 레벨 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당신의 영어 레벨"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediate"
                    android:textColor="@color/primary"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종합 점수: 75점"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 세부 점수 (대화 테스트일 때만 표시) - 2x2 그리드 -->
        <LinearLayout
            android:id="@+id/detail_scores_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <!-- 첫 번째 행: 문법, 어휘 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- 문법 점수 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="문법"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_grammar_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 어휘 점수 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="어휘"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_vocab_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- 두 번째 행: 문장복잡도, 의사소통 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 문장복잡도 점수 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="문장복잡도"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_complexity_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 의사소통 점수 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="의사소통"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_communication_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <!-- AI 피드백 메시지 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/primary_light"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI 평가"
                    android:textColor="@color/primary_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="좋아요! 중급 수준의 영어 실력을 가지고 계시네요."
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:lineSpacingMultiplier="1.4" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 장점 (대화 테스트일 때만 표시) -->
        <LinearLayout
            android:id="@+id/strengths_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잘하는 점"
                android:textColor="@color/success"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/pretendard_bold"
                android:drawableStart="@drawable/ic_check_circle"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_strengths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 기본 문법을 잘 활용함"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"
                android:lineSpacingMultiplier="1.4" />
        </LinearLayout>

        <!-- 개선점 (대화 테스트일 때만 표시) -->
        <LinearLayout
            android:id="@+id/improvements_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개선할 점"
                android:textColor="@color/warning"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/pretendard_bold"
                android:drawableStart="@drawable/ic_lightbulb"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_improvements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 복잡한 문장 구조 연습 필요"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"
                android:lineSpacingMultiplier="1.4" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 시작 버튼 -->
        <Button
            android:id="@+id/btn_start_learning"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="학습 시작하기"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_bold" />

    </LinearLayout>
</ScrollView>
